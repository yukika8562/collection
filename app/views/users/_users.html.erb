<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
    <li class="media">
      <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= user.name %>
        </div>
        <div>
          <p><%= link_to 'My Profile', user_path(user) %></p>
        </div>
      </div>s
    </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>