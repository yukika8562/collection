<% if users.any? %>
  <div class="text-center mb-5">
    <h1><strong>ユーザー一覧</strong></h1>
  </div>
  <ul class="list-unstyled text-center">
    <% users.each do |user| %>
    <li class="media">
      <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= user.name %>
        </div>
        <div>
          <p><%= link_to 'プロフィール', user_path(user) %></p>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>