<% if logged_in? %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>Collections</h1>
  </div>
</div>
  <p>ようこそ<%= current_user.name %> さん</p>
  <p>あなたがCollectionしているものを投稿し、共有しよう！</p>
  
  <div class="row justify-content-center">
    <div class="col-md-3" style="margin: 20px;">
      <%= link_to "Collecton作成", new_collection_path, class: "btn btn-block btn-dark" %>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-md-3" style="margin: 20px;">
      <%= link_to "マイページ", user_path(current_user), class: "btn btn-block btn-dark" %>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-md-3" style="margin: 20px;">
      <%= link_to "ユーザー一覧", users_path, class: "btn btn-block btn-dark" %>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-md-3" style="margin: 20px;">
      <%= link_to "ログアウト", logout_path, method: :delete , class: "btn btn-block btn-secondary" %>
    </div>
  </div>
  
<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>Collections</h1>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-md-3" style="margin: 20px;">
    <%= link_to "ログイン", login_path, class: "btn btn-block btn-dark" %>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-md-3" style="margin: 20px;">
    <%= link_to "会員登録", signup_path, class: "btn btn-block btn-dark" %>
  </div>
</div>
<% end %>